{
  "name": "chase",
  "version": "0.0.1",
  "description": "Real time logging display built on Electron",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm-run-all build:main build:renderer",
    "build:main": "webpack --mode production --config webpack.config.electron.js",
    "build:main-dev": "webpack --mode development --config webpack.config.electron.js",
    "build:renderer": "webpack --mode production --config webpack.config.renderer.js",
    "build:test": "webpack --mode none --config webpack.config.test.js",
    "electron": "electron ./dist/main.js",
    "jest:e2e": "jest test/e2e",
    "serve": "webpack-dev-server --mode development --config webpack.config.renderer.js",
    "start": "npm-run-all build:main-dev electron",
    "test": "npm-run-all build:test jest:*"
  },
  "keywords": [],
  "author": {
    "name": "Charlie Lynch",
    "email": "lynchcoding@gmail.com",
    "url": "https://github.com/LynchyC"
  },
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.1",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.13",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/react-dropzone": "^4.2.2",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-tabs": "^2.3.0",
    "@types/uniqid": "^4.1.2",
    "babel-loader": "^8.0.5",
    "clean-webpack-plugin": "^1.0.1",
    "css-loader": "^2.1.0",
    "electron": "^4.0.4",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "spectron": "^5.0.0",
    "style-loader": "^0.23.1",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-loader": "^3.5.4",
    "typescript": "^3.3.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "node-watch": "^0.6.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-dropzone": "^8.0.4",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-tabs": "^3.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "uniqid": "^5.0.3"
  }
}
