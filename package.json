{
  "name": "chase",
  "version": "0.0.1",
  "description": "Real time logging display built on Electron",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm-run-all build:main build:renderer",
    "build:main": "webpack --mode production --config webpack.config.electron.js",
    "build:main-dev": "webpack --mode development --config webpack.config.electron.js",
    "build:renderer": "webpack --mode production --config webpack.config.renderer.js",
    "build:test": "webpack --mode none --config webpack.config.test.js",
    "electron": "electron ./dist/main.js",
    "jest:e2e": "jest test/e2e",
    "serve": "webpack-dev-server --mode development --config webpack.config.renderer.js",
    "start": "npm-run-all build:main-dev electron",
    "test": "npm-run-all build:test jest:*"
  },
  "keywords": [],
  "author": {
    "name": "Charlie Lynch",
    "email": "lynchcoding@gmail.com",
    "url": "https://github.com/LynchyC"
  },
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-beta.51",
    "@types/chokidar": "^1.7.5",
    "@types/jest": "^23.1.1",
    "@types/react": "^16.3.17",
    "@types/react-dom": "^16.0.6",
    "@types/react-dropzone": "^4.2.0",
    "@types/react-redux": "^6.0.3",
    "@types/react-router-dom": "^4.2.7",
    "@types/react-tabs": "^1.0.4",
    "@types/uniqid": "^4.1.2",
    "babel-loader": "^8.0.0-beta.3",
    "clean-webpack-plugin": "^0.1.19",
    "css-loader": "^0.28.11",
    "electron": "^2.0.2",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "raw-loader": "^0.5.1",
    "sass-loader": "^7.0.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "ts-jest": "^22.4.6",
    "ts-loader": "^4.3.0",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-loader": "^3.6.0",
    "typescript": "^2.8.3",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-dropzone": "^4.2.12",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-tabs": "^2.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "uniqid": "^5.0.3"
  }
}
